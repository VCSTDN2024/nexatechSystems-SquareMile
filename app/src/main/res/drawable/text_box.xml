<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
            <shape android:shape="rectangle">
                <solid android:color="#F7F7F9"/> <!-- Background color when pressed -->
                <stroke
                    android:width="2dp"
                    android:color="#0D6EFD"/> <!-- Border color -->
                <padding
                    android:left="5dp"
                    android:right="5dp"
                    android:top="5dp"
                    android:bottom="5dp"/>
            </shape>
        </item>
        <item>
            <shape android:shape="rectangle">
                <solid android:color="#FFFFFF"/> <!-- Default background color -->
                <stroke
                    android:width="1dp"
                    android:color="#0D6EFD"/> <!-- Border color -->
                <padding
                    android:left="5dp"
                    android:right="5dp"
                    android:top="5dp"
                    android:bottom="5dp"/>
                <corners android:radius="8dp"/>
            </shape>
        </item>

</selector>